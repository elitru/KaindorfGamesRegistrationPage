@import "./../../../styles.styl"

#tournaments
    width 100%
    height 100%
    overflow hidden

    .container
        width 100%
        height 100%
        overflow hidden
        display flex
        flex-direction row
        align-content flex-start
        justify-content flex-start
        transition all 500ms

    aside
        width 350px
        height 100%
        border-right solid 5px pri
        background dark
        display grid
        place-items center

        ul
            padding 0px
            margin 0px
            list-style none
            width 100%
            position relative
            z-index 1
        li
            width 100%
            height 80px
            display flex
            align-content center
            align-items center
            justify-content flex-start
            font-size 19px
            color white
            cursor pointer
            padding 24px 50px
            transition all 300ms

            &:hover
                background #1f1f1f

        .active:hover
            background transparent

        section
            width 100%
            height 80px
            display block
            background pri
            position absolute
            top 0px
            left 0px
            z-index -1
            transition all 300ms

            span
                width: 0;
                height: 0;
                position absolute
                top 0px
                right -40px
                border-style: solid;
                border-width: 40px 0 40px 40px;
                border-color: transparent transparent transparent pri;

    .data
        width 100%
        height 100%
        padding 0px 30px
        overflow auto

        .table
            width 100%
            height 100%
            padding 40px

            .header
                background dark
                padding 28px 40px
                position relative

                section 
                    color white
                    font-size 18px
                    font-weight 600
                    text-transform uppercase

                button
                    font-size 15px
                    padding 12px 20px 10px 20px
                    position absolute
                    top 50%
                    right 20px
                    transform translateY(-50%)

            div
                width 100%
                display flex
                flex-direction row
                align-content stretch
                align-items center
                justify-content space-between
                padding 18px 40px
                border-bottom solid 3px pri
                margin-bottom 30px
                cursor default

            .size
                    width 150px
                
            .team
                width 20%

            .members
                width calc(70% - 150px)

            .item
                background light
                color dark

                i 
                    color success
                    font-size 17px

                .pw
                    color error

                button
                    font-size 14px
                    margin-right 20px
                    padding 10px 20px 8px 20px

                .options
                    margin-right 0px
                    display flex
                    flex-direction row
                    align-items center
                    align-content center
                    justify-content flex-start

                    input
                        width 100%
                        font-size 15px
                        padding 10px 15px
                        background #DDEAEB
                        color dark
                        border none
                        transition all 300ms
                        border-bottom solid 2px transparent
                        margin-right 15px

                        &::placeholder
                            opacity .4

                        &:focus
                            border-bottom-color pri

    .form
        width 400px
        height 100%
        position absolute
        top 0px
        right -400px
        font-size 14px
        padding 30px 50px
        background light
        transition all 500ms
        box-shadow inset 4px 0px 10px 0px rgba(0,0,0, .25)
        transition all 500ms

        .team-creator-close
            width 42px
            height 42px
            position absolute
            top 40px
            right 25px
            cursor pointer
            transition all 300ms

            &:hover
                color sec

            .line
                height 2px
                background dark
                margin 0 auto
                transform rotate(45deg)

                &:last-child
                    transform rotate(-45deg)
                    margin-top -2px

        .loader-container
            width 100%
            display grid
            place-items center
            padding 50px 0px

        h3
            margin 0px
            margin-top 30px
            padding 10px 0px
            text-transform uppercase
            color dark
            font-size 22px

        section
            margin-top 20px

         button
            font-size 15px
            padding 14px 20px 12px 20px
            width 100%
            margin-top 40px

    .form-container-open
        right 0px
    
    .form-open
        filter: blur(4px)
        transform scale(1.01) translateX(-400px)
        overflow hidden

    .blur-content
        filter: blur(4px)
        transform: scale(1.03);

    #overlay
        position: absolute
        width: 100%
        height: 100%
        top: 0
        left: 0
        z-index: 1000
        display: flex
        justify-content: center
        align-items: center
        background: rgba(0, 0, 0, .5)
        overflow: hidden
        .box
            width 550px
            height auto
            padding-bottom 60px
            border-bottom solid 7px pri
            background white
            .title
                background pri

                h1
                    color white
                    margin 0px
                    padding 40px 0px 20px 0px
                    text-align center
                    text-transform uppercase

                .triangle
                    width 0
                    height 0
                    border-left: 275px solid light;
                    border-right: 275px solid light;
                    border-top: 60px solid pri;
                    margin-top -20px
            .data
                margin-top 20px
                width 80%
                margin 0 auto

                .input
                    margin 0 auto
                    margin-top 40px

                button
                    font-size 18px
                    padding 17px 20px 15px 20px
                    width 100%
                    margin-top 60px

            .error
                text-align center
                color error
                font-weight 600
                padding-top 40px
                margin-bottom -20px

            .loader-container
                width 100%
                height 352px
                display grid
                place-items center

            .go-register
                position absolute
                bottom -70px
                left 50%
                transform translateX(-50%)

                span
                    color light
                    cursor pointer
                    transition all 200ms

                    &:hover
                        color pri