@import "./../../../styles.styl"

#register
    width 100%
    height 100%
    overflow hidden

    .logo
        z-index 1000
        color light
        font-size 20px
        position absolute
        top 20px
        left 20px
        font-weight 400
        opacity .5
        transition all 300ms
        cursor pointer

        &:hover
            opacity 1

    .container
        width 100%
        height 100%
        background url('/assets/bg.jpg') left no-repeat
        background-size cover
        filter blur(3px)
        transform scale(1.05)
        position relative

    .box
        width 550px
        height auto
        background light
        position absolute
        top 50%
        right 150px
        transform translateY(-50%)
        padding-bottom 60px
        border-bottom solid 7px pri

        .title
            background pri

            h1
                color white
                margin 0px
                padding 40px 0px 20px 0px
                text-align center
                text-transform uppercase

            .triangle
                background green
                width 0
                height 0
                border-left: 275px solid light;
                border-right: 275px solid light;
                border-top: 60px solid pri;
                margin-top -20px
        .data
            margin-top 20px
            width 80%
            margin 0 auto

            .input
                margin 0 auto
                margin-top 40px

            button
                font-size 18px
                padding 17px 20px 15px 20px
                width 100%
                margin-top 60px

        .error
            text-align center
            color error
            font-weight 600
            padding-top 40px
            margin-bottom -20px

        .loader-container
            width 100%
            height 584px
            display grid
            place-items center

        .go-login
            position absolute
            bottom -70px
            left 50%
            transform translateX(-50%)

            span
                color light
                cursor pointer
                transition all 200ms

                &:hover
                    color pri

@media screen and (max-width 1500px)
    #register
        .box
            left 50%
            right 0px
            transform translateX(-50%) translateY(-50%)

        .logo
            left 0px
            right 0px
            top 40px
            margin 0 auto
            text-align center

@media screen and (max-width 680px)
    #register
        .box
            width 90%

            .title
                h1
                    padding 40px 0px

                .triangle
                    display none

        .go-register
            width 100%

            span 
                width 100%
                display block
                text-align center